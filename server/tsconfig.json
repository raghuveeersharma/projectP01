{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "commonjs",          
    "target": "es2020",
    "types": ["node"],             
    "lib": ["esnext"],             

    /* Output */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Type Checking */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,

    /* Module Behavior */
    "esModuleInterop": true,       
    "skipLibCheck": true
  },
  "include": ["src"]
}
